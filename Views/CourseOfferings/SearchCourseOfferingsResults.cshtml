            @Html.DisplayFor(modelItem => item.StartTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndTime)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CourseOfferingId }) |
            @Html.ActionLink("Details", "Details", new { id=item.CourseOfferingId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CourseOfferingId })
