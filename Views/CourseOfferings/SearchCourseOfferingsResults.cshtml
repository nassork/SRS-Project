@{
    ViewBag.Title = "SearchCourseOfferingsResults";
}

<h2>SearchCourseOfferingsResults</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.CourseNumber)
        </th>
